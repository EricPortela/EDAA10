import java.util.*;


public class CardDeck {
	
	private Card[] theCards; // vektor med kort...
	private int removeCount;
	
	/** Skapar en kortlek */
	public CardDeck() {
		theCards = new Card[52]; //skapa vektorn
		removeCount = 0;
		
		// skapa korten
		int count = 0;
		for (int i = 1; i<14; i++) {			
			for (int r = 1; r<5; r ++) {
				Card c = new Card(r,i);
				theCards[count] = c;
				count += 1;
			}
		}		
	}
	
	/** Blandar kortleken */
	void shuffle() {
		Random r = new Random();
		
		for (int i = 50; i>0; i--) {

			int nr = r.nextInt(i);
			
			Card currentCard = theCards[i];
			Card randomCard = theCards[nr];
			
			
			theCards[i] = randomCard;
			theCards[nr] = currentCard;
		}
	}
	
	/** Undersöker om det finns fler kort i kortleken */
	boolean moreCards() {
		boolean moreCards;
		
		if (removeCount == theCards.length-1) {
			moreCards = false;
		} else {
			moreCards = true;
		}
		
		/*
		for (int i = 0; i < theCards.length; i ++) {
			if (theCards[i] != null) {
				moreCards = true;
				break;
			}	
		}
		*/
				
		return moreCards;
	}
	
	/** Drar det översta kortet i leken */
	public Card getCard() {
				
		if (removeCount < theCards.length-1) {
			removeCount += 1;
		} else {
			removeCount = 0;
		}
		
		Card upperCard = theCards[removeCount];

		
		//int lenghtArray = theCards.length;
		
		//System.out.println(Arrays.toString(theCards));
		
		/*
		 for (int i = 0; i < (theCards.length - 1); i ++) {
			theCards[i] = theCards[i+1];
		}
		 */
		//theCards[lenghtArray-1] = null;
		
		
		return upperCard;
	}
	
}
